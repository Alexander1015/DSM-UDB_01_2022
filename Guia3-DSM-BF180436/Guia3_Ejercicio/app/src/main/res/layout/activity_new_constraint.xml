<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_new_constraint">

    <TextView
        android:id="@+id/new_texto_conectar"
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="59dp"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="452dp"
        android:layout_weight="2"
        android:text="Conectar"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/new_input_usuario"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/new_texto_conectar"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:hint="Correo"
        app:layout_constraintBottom_toTopOf="@+id/new_input_contrasena"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_texto_conectar" />

    <EditText
        android:id="@+id/new_input_contrasena"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/new_input_usuario"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:hint="Contraseña"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/new_boton_iniciar_sesion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_input_usuario" />

    <Button
        android:id="@+id/new_boton_iniciar_sesion"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/new_input_contrasena"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.1"
        android:text="Iniciar Sesion"
        app:layout_constraintBottom_toTopOf="@+id/new_btnSalir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_input_contrasena" />

    <Button
        android:id="@+id/new_btnSalir"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/new_boton_iniciar_sesion"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="184dp"
        android:onClick="finalizarActividad"
        android:text="Salir"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_boton_iniciar_sesion" />

    <TextView
        android:id="@+id/new_texto_olvidaste_contrasena"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@id/new_btnSalir"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="98dp"
        android:layout_marginEnd="99dp"
        android:layout_marginBottom="114dp"
        android:layout_weight="1"
        android:text="¿Olvidaste tu constraseña?"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#0E8AEE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_btnSalir" />

</androidx.constraintlayout.widget.ConstraintLayout>