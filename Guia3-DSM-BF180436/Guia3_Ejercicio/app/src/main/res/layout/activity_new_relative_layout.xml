<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_new_relative_layout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="48dp">
        <TextView
            android:id="@+id/new_texto_conectar"
            android:layout_width="wrap_content"
            android:layout_height="220dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_weight="2"
            android:text="Conectar"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/new_input_usuario"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/new_texto_conectar"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:hint="Correo" />
        <EditText
            android:id="@+id/new_input_contrasena"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/new_input_usuario"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:hint="Contraseña"
            android:inputType="textPassword" />
        <Button
            android:id="@+id/new_boton_iniciar_sesion"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/new_input_contrasena"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.1"
            android:text="Iniciar Sesion" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/new_boton_iniciar_sesion"
            android:layout_centerHorizontal="true"
            android:text="Salir"
            android:layout_gravity="bottom"
            android:onClick="finalizarActividad"
            android:id="@+id/new_btnSalir" />
        <TextView
            android:id="@+id/new_texto_olvidaste_contrasena"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_below="@id/new_btnSalir"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:text="¿Olvidaste tu constraseña?"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#0E8AEE" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>