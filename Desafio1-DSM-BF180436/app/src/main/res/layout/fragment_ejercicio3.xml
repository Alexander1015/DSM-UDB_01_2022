                        tools:ignore="MissingConstraints" />

                    <EditText
                        android:id="@+id/txtplace2"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginStart="9dp"
                        android:layout_marginEnd="9dp"
                        android:layout_marginBottom="20dp"
                        android:autofillHints=""
                        android:background="@color/divider"
                        android:ems="10"
                        android:hint="@string/hint_place_2"
                        android:inputType="text"
                        android:textColor="@color/primary_text"
                        android:textColorHint="#37474F"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toTopOf="@+id/txtlast2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtsal2"
                        tools:ignore="MissingConstraints" />

                    <EditText
                        android:id="@+id/txtsal2"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginStart="9dp"
                        android:layout_marginEnd="9dp"
                        android:layout_marginBottom="20dp"
                        android:autofillHints=""
                        android:background="@color/divider"
                        android:ems="10"
                        android:hint="@string/hint_sal_2"
                        android:inputType="numberDecimal"
                        android:textColor="@color/primary_text"
                        android:textColorHint="#37474F"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toTopOf="@+id/txtplace2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtname3"
                        tools:ignore="MissingConstraints" />

                    <!-- -->
                    <EditText
                        android:id="@+id/txtname3"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginStart="9dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="9dp"
                        android:layout_marginBottom="20dp"
