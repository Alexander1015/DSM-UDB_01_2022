                        android:id="@+id/txtlast3"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginStart="9dp"
                        android:layout_marginEnd="9dp"
                        android:layout_marginBottom="20dp"
                        android:autofillHints=""
                        android:ems="10"
                        android:hint="@string/hint_last_3"
                        android:background="@color/divider"
                        android:inputType="text"
                        android:textColor="@color/primary_text"
                        android:textColorHint="@color/secondary_text"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toTopOf="@+id/txtlast3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtplace3"
                        tools:ignore="MissingConstraints" />

                    <EditText
                        android:id="@+id/txtplace3"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginStart="9dp"
                        android:layout_marginEnd="9dp"
                        android:layout_marginBottom="20dp"
                        android:autofillHints=""
                        android:ems="10"
                        android:hint="@string/hint_place_3"
                        android:background="@color/divider"
                        android:inputType="text"
                        android:textColor="@color/primary_text"
                        android:textColorHint="@color/secondary_text"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toTopOf="@+id/txtlast3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtsal3"
                        tools:ignore="MissingConstraints" />

                    <EditText
                        android:id="@+id/txtsal3"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginStart="9dp"
                        android:layout_marginEnd="9dp"
                        android:layout_marginBottom="20dp"
                        android:autofillHints=""
                        android:ems="10"
                        android:hint="@string/hint_sal_3"
                        android:background="@color/divider"
                        android:inputType="numberDecimal"
                        android:textColor="@color/primary_text"
                        android:textColorHint="@color/secondary_text"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toTopOf="@+id/txtplace3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/btn_ejer3"
                        tools:ignore="MissingConstraints" />

                    <Button
                        android:id="@+id/btn_ejer3"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginStart="9dp"
                        android:layout_marginEnd="9dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/accent"
                        android:backgroundTint="@color/accent"
                        android:text="@string/btn_calcular_ejer3"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtsal3"
                        android:drawableLeft="@drawable/cash_multiple"
                        android:drawableRight="@drawable/cash_multiple"
                        android:paddingHorizontal="30dp"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/lblresult_ejer3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:paddingVertical="10dp"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/btn_ejer3"
                        tools:ignore="MissingConstraints" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>